<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:care_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="7dp"
    android:clickable="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:padding="10dp">
        <ImageView
            android:id="@+id/img_cond"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sun"/>
        <LinearLayout
            android:id="@+id/linear_temp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/temp"
                android:text="20°C"
                android:paddingTop="15dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:textSize="35sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/weather_info"
                android:text="多云"
                android:textSize="25sp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/quality"
            android:layout_below="@id/linear_temp"
            android:gravity="end"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/airquality"/>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/airQlty"
                android:layout_marginRight="30dp"
                android:text=":N/A"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/relative_pm"
            android:layout_below="@id/quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/pm"
                android:text="PM2.5:"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/pm2.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/pm"
                android:text="N/A"
                />
            <TextView
                android:text="AQI指数:"
                android:textSize="16sp"
                android:layout_toLeftOf="@+id/aqi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/aqi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:paddingRight="15dp"
                android:text="N/A"
                />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
